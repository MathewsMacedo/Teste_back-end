<h1> Listagem de Contatos </h1>

    <% if flash[:notice]%>
        <div class="alert alert-success" role="alert">
        <%= flash[:notice]%>
        </div>
    <%end%>
<br/>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th> Nome </th>
            <th> Email </th>
            <th> Telefone </th>
            <th> Mensagem </th>
        </tr>
    </thead>
    <tbody>
       <%= render @contatos%>
    </tbody>
</table>

<%= link_to  "Voltar", contatos_url, class:"btn btn-success" %>
<br/><br/><br/><br/>